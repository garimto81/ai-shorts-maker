{
  "images_folder": "input/images",
  "script_file": "input/scripts/sample.json",
  "output_path": "output/generated_shorts.mp4",
  "template": "modern",
  "background_music": "assets/music/upbeat.mp3",
  "use_tts": true,
  "video_settings": {
    "width": 1080,
    "height": 1920,
    "fps": 30,
    "quality": "high"
  },
  "image_settings": {
    "default_duration": 3.0,
    "transition_duration": 0.5,
    "resize_method": "smart",
    "enhancement": {
      "brightness": 1.1,
      "contrast": 1.1,
      "saturation": 1.2
    }
  },
  "text_settings": {
    "font_family": "Arial",
    "font_size": 48,
    "color": "#FFFFFF",
    "stroke_color": "#000000",
    "stroke_width": 2,
    "position": "bottom",
    "animation": "fade"
  },
  "audio_settings": {
    "tts": {
      "enabled": true,
      "voice": "ko-KR-SunHiNeural",
      "rate": 1.0,
      "pitch": 1.0,
      "volume": 0.8
    },
    "background_music": {
      "enabled": true,
      "volume": 0.3,
      "fade_in": 2.0,
      "fade_out": 2.0
    }
  }
}