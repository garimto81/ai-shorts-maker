{
  "name": "ai-shorts-maker",
  "version": 2,
  "public": true,
  "github": {
    "repo": "garimto81/ai-shorts-maker",
    "branch": "master"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "GOOGLE_AI_API_KEY": {
      "description": "Google AI API Key for Gemini",
      "required": true
    }
  },
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs"
}