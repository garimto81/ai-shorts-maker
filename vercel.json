{
  "version": 2,
  "name": "ai-shorts-maker",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "functions": {
    "pages/api/**/*.ts": {
      "maxDuration": 300
    }
  },
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_VERSION": "2.0.1"
  },
  "regions": ["icn1"]
}